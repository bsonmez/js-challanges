{
  "root": true,
  "extends": "airbnb",
  "plugins": ["jest"],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "no-plusplus": "off",
    "func-names": ["error", "as-needed"],
    "no-bitwise": "off",
    "no-lonely-if": "off",
    "class-methods-use-this": "off",
    "arrow-body-style": "off",
    "no-loop-func": "off",
    "no-restricted-syntax": "off",
    "prefer-const": "off",
    "quotes": ["error", "double"]
  }
}
